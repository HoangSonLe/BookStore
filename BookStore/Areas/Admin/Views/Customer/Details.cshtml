@model BookStore.Models.Customer
<div class="modal-body" id="modalBody">
    <div style="padding: 0 15px 0 15px">
        <div class="row">
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Họ: </b></label>
                <div class="col-sm-4">
                    <input type="text" readonly="" class="form-control-plaintext" value="@Model.LastName">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Tên: </b></label>
                <div class="col-sm-6">
                    <input type="text" readonly="" class="form-control-plaintext" value="@Model.FirstName">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>ID: </b></label>
                <div class="col-sm-6">
                    <input type="text" readonly="" class="form-control-plaintext" value="@Model.CustomerId">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Username: </b></label>
                <div class="col-sm-4">
                    <input type="text" readonly="" class="form-control-plaintext" value="@Model.UserName">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Password: </b></label>
                <div class="col-sm-6">
                    <input type="password" readonly="" class="form-control-plaintext" value="@Model.Password">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Địa chỉ: </b></label>
                <div class="col-sm-6">
                    <input type="text" readonly="" class="form-control-plaintext" value="@Model.Address">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Email: </b></label>
                <div class="col-sm-4">
                    <input type="text" readonly="" class="form-control-plaintext" value="@Model.Email">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Điện thoại: </b></label>
                <div class="col-sm-6">
                    <input type="text" readonly="" class="form-control-plaintext" value="@Model.Phone">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Giới tính: </b></label>
                <div class="col-sm-6">
                    @{ var sex = Model.Sex==true?"Nam":"Nữ";}
                    <input type="text" readonly="" class="form-control-plaintext" value="@sex">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label"><b>Ngày tạo: </b></label>
                <div class="col-sm-6">
                    <input type="text" readonly="" class="form-control-plaintext" value="@Model.CreatedDate?.ToString("dd-MM-yyyy hh:mm:ss")">
                </div>
            </div>
        </div>

        <div>
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
