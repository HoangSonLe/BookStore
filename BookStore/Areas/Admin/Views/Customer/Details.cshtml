@{
    Layout = null;
}

@model Customer

<form id="formEdit" enctype="multipart/form-data">
    <div class="modal-body">
        <br />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="text-center">
                        @if (String.IsNullOrEmpty(Model.Image))
                        {
                            <img id="image_upload_preview" src="https://cdn1.iconfinder.com/data/icons/navigation-elements/512/user-login-man-human-body-mobile-person-512.png" style="width: 200px; height: 200px;" class="avatar img-circle" alt="avatar">
                        }
                        else
                        {
                            <img id="image_upload_preview" src="~/img/Customer/@Model.Image" style="width: 200px; height: 200px;" class="avatar img-circle" alt="avatar">
                        }
                        <h2>@Model.FirstName @Model.LastName</h2>
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <label>Giới tính</label>
                    <select class="form-control" disabled asp-for="Sex">
                        @if (Model.Sex == true)
                        {
                            <option selected value="true">Nam</option>
                            <option value="false">Nữ</option>
                        }
                        else
                        {
                            <option selected value="false">Nữ</option>
                            <option value="true">Nam</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" class="form-control" readonly="" asp-for="PhoneNumber" value="@Model.PhoneNumber" name="phone" placeholder="Nhập số điện thoại">
                </div>


            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ khách hàng</label>
                            <input type="text" class="form-control" readonly="" asp-for="LastName" value="@Model.LastName" placeholder="Nhập họ">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tên khách hàng</label>
                            <input type="hidden" class="form-control inputName" asp-for="CustomerId" value="@Model.CustomerId">
                            <input type="text" class="form-control" readonly="" asp-for="FirstName" value="@Model.FirstName" placeholder="Nhập tên">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tài khoản</label>
                            <input type="text" class="form-control" readonly="" asp-for="UserName" value="@Model.UserName" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="password" class="form-control" readonly="" asp-for="Password" value="@Model.Password" placeholder="Nhập mật khẩu">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Active</label>
                            <select class="form-control" disabled asp-for="IsActive">
                                @if (Model.IsActive == true)
                                {
                                    <option selected value="true">True</option>
                                    <option value="false">False</option>
                                }
                                else
                                {
                                    <option selected value="false">False</option>
                                    <option value="true">True</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>PhoneNumberConfirmed</label>
                            <select class="form-control" disabled asp-for="PhoneNumberConfirmed">
                                @if (Model.PhoneNumberConfirmed == true)
                                {
                                    <option selected value="true">True</option>
                                    <option value="false">False</option>
                                }
                                else
                                {
                                    <option selected value="false">False</option>
                                    <option value="true">True</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" readonly="" asp-for="Email" value="@Model.Email" placeholder="Nhập email">
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" readonly="" asp-for="Address" value="@Model.Address" placeholder="Nhập địa chỉ">
                </div>
                <div class="form-group">
                    <label>Ngày tạo</label>
                    <input type="text" readonly="" class="form-control" asp-for="CreatedDate" value="@Model.CreatedDate" />
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="reset" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    </div>
</form>

