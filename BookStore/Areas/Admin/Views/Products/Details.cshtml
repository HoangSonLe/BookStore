<link rel="stylesheet" href="~/Admin/assets/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" href="~/Admin/assets/font-awesome/css/font-awesome.min.css">
<link rel="stylesheet" href="~/Admin/css/flaty-responsive.css">
<link href="~/Admin/css/flaty1.css" rel="stylesheet" />

@model BookStore.Models.Product
<div class="modal-body" id="modalBody">
    <div style="padding: 0 15px 0 15px">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group row">
                    <label class="col-sm-4"><b>Tên Sản Phẩm: </b></label>
                    <div class="col-sm-6">
                        <input class="form-control" asp-for="ProductName" readonly/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4"><b>Loại Sản Phẩm: </b></label>
                    <div class="col-sm-6">
                        <input class="form-control" asp-for="Category.Name" readonly/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4"><b>Url Friendly: </b></label>
                    <div class="col-sm-6">
                        <input class="form-control" asp-for="UrlFriendly" readonly/>
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="form-group row">
                    <label class="col-sm-6"><b>Bao gồm VAT: </b></label>
                    <div class="col-sm-5">
                        @{
                            var vat = Model.IncludeVat == true ? "checked" : "";
                        }
                        <input type="checkbox" readonly @vat>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label"><b>Tình Trạng: </b></label>
                    <div class="col-sm-6">
                        @{
                            var status = Model.Status == true ? "Active" : "No Active";
                        }
                        <input type="text" readonly="" class="form-control" value="@status">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4"><b>Nhà Xuất Bản: </b></label>
                    <div class="col-sm-6">
                        <input class="form-control" asp-for="Publisher.PublisherName" disabled />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label"><b>Giá Sản Phẩm: </b></label>
                    <div class="col-sm-6">
                        <input type="text" readonly="" class="form-control" value="@Model.Price VNĐ">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label"><b>Giảm %: </b></label>
                    <div class="col-sm-6">
                        <input type="text" readonly="" class="form-control" value="@Model.Discount %">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label"><b>Giá Giảm: </b></label>
                    <div class="col-sm-6">
                        <input type="text" readonly="" class="form-control" value="@Model.PromotionPrice VNĐ">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label"><b>Số Lượng: </b></label>
                    <div class="col-sm-6">
                        <input type="text" readonly="" class="form-control" value="@Model.Quantity">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label"><b>Đơn Vị Tính: </b></label>
                    <div class="col-sm-6">
                        <input type="text" readonly="" class="form-control" value="@Model.Unit">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label"><b>Lượt Xem: </b></label>
                    <div class="col-sm-6">
                        <input type="text" readonly="" class="form-control" value="@Model.ViewCounts">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <label class="col-sm-4 col-form-label"><b>Ảnh bìa</b></label>
                <img src="~/Image/Product/@Model.ImageCover" style="max-width:250px; max-height:300px; min-height:250px; min-width:200px;" />
            </div>
            <div class="col-lg-8 col-md-8">
                <label class="col-sm-4 col-form-label"><b>Ảnh mô tả</b></label><br />
                @await Html.PartialAsync("SlideShow", Model.ProductImages)
            </div>
        </div>
        <div>
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
