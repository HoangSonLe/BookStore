@model Publishers
@{
    if (Model != null)
    {
        <style>
            .resize {
                width: 270px;
            }

            .resizeLarge {
                width: 270px;
                height: 100px;
                resize: none;
                border-top: 2px solid #919191;
                border-left: 2px solid #919191;
                border-bottom: 2px solid #E5E5E5;
                border-right: 2px solid #E5E5E5;
            }
        </style>
        <div>
            <div class="container-fluid">
                <div class="row" style="margin-top:20px">
                    <div class="col-md-4">
                        <div class="row" style="margin-left:20px">
                            <img src="~/Image/@Model.Logo" style="width:180px;height:180px;margin-bottom:10px" id="preview">
                        </div>

                    </div>
                    <div class="col-md-8">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tên nhà xuất bản:</label>
                            <div class="col-sm-8">
                                <input asp-for="PublisherName" readonly="" id="pubName" class="form-control-plaintext resize">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Địa chỉ: </label>
                            <div class="col-sm-8">
                                <input asp-for="Address" readonly="" class="form-control-plaintext resize">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Số điện thoại: </label>
                            <div class="col-sm-8">
                                <input asp-for="Phone" readonly="" class="form-control-plaintext resize">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Email: </label>
                            <div class="col-sm-8">
                                <input asp-for="Email" readonly="" class="form-control-plaintext resize">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Mô tả: </label>
                            <div class="col-sm-8">
                                <textarea asp-for="Description" readonly="" class="form-control-plaintext resizeLarge"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    }
    else
    {
        <h1 class="text-center">Dữ liệu không tồn tại</h1>
    }
}

