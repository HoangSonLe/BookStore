
@model Employee

<a class="btn btn-success pull-right" asp-action="index"><i class="fa fa-backward"></i> Edit</a>
<br>
<br>

<div class="box">
    <div class="box-title">
        <h3><i class="fa fa-edit"></i>Edit Employee</h3>
    </div>
    <div class="box-content">
        <div class="btn-toolbar clearfix">
            <br><br>
            <div class="clearfix"></div>
            <form class="form-horizontal" id="formEdit" enctype="multipart/form-data">
                <div class="col-12">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="hidden" class="form-control inputName" asp-for="EmployeeId">
                            <label class="col-lg-3 control-label">Họ:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="LastName" type="text" value="@Model.LastName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Tên:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="FirstName" type="text" value="@Model.FirstName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Tài khoản:</label>
                            <div class="col-md-8">
                                <input class="form-control" asp-for="UserName" readonly="" type="text" value="@Model.UserName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Mật khẩu:</label>
                            <div class="col-md-8">
                                <input class="form-control" asp-for="Password" type="password" value="@Model.Password">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Địa chỉ:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="Address" type="text" value="@Model.Address">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="Email" type="text" value="@Model.Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Điện thoại:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="Phone" type="text" value="@Model.Phone">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Ngày sinh:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="BirthDate" type="text" value="@Model.BirthDate">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Cấp bậc:</label>
                            <div class="col-lg-8">
                                <select class="form-control" asp-for="Role" asp-items="ViewBag.RoleId"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Quản lý bởi:</label>
                            <div class="col-lg-8">
                                <select class="form-control" asp-for="ManagerId">
                                    @{
                                        IEnumerable<Employee> managers = ViewBag.Managers as List<Employee>;
                                    }
                                    @if (managers != null)
                                    {
                                        foreach (var item in managers)
                                        {
                                            if (item.EmployeeId == Model.EmployeeId)
                                            {
                                                <option selected value="@item.EmployeeId">@item.FirstName @item.LastName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.EmployeeId">@item.FirstName @item.LastName</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                            <input type="hidden" class="form-control inputName" asp-for="CreatedDate">
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-8">
                                <input type="submit" value="Save Changes" class="btn btn-primary"/>
                                <span></span>
                                <input type="reset" class="btn btn-default" value="Cancel">
                            </div>
                        </div>
                    </div>

                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Admin/assets/data-tables/bootstrap3/dataTables.bootstrap.js"></script>
    <script src="~/Admin/js/Employee.js"></script>
}
