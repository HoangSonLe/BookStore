@model BookStore.Models.Orders
@{ 
    var employee = ViewBag.Employee as Employee;
}

<div class="row container">

    <form id="formOrder">
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label">Nhân viên</label>
                    <input type="text" readonly="" id="@employee.EmployeeId" name="@employee.EmployeeId" value="@employee.FirstName @employee.LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tên khách hàng</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label">Ghi chú</label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="OrderStatus" class="control-label">Trạng thái</label>
                    <input asp-for="OrderStatus" class="form-control" value=1 />
                    <span asp-validation-for="OrderStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ShipDate" class="control-label">Ngày giao hàng dự kiến</label>
                    <input asp-for="ShipDate" class="form-control" />
                    <span asp-validation-for="ShipDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <label class="control-label">Sản phẩm</label>
                    <select class="form-control" id="ProductId" name="ProductId" asp-items="ViewBag.ProductId"></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Số lượng</label>
                    <input class="form-control" id="ProQuantity" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Chức năng</label>
                    <input type="button" class="form-control btn-success add-detail" value="Thêm" />
                </div>
            </div>
        </div>

        <div class="row container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Sản phẩm</th>
                        <th scope="col">Mã sản phẩm</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Xóa bỏ</th>
                    </tr>
                </thead>
                <tbody class="add-order-detail">
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <input type="button" value="Lập hóa đơn" class="btn-primary create-order" />
        </div>
    </form>

</div>


@section Scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Admin/assets/data-tables/bootstrap3/dataTables.bootstrap.js"></script>
    <script src="~/Admin/js/Order.js"></script>
}
