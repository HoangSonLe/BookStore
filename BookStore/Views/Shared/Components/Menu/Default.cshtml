@model IEnumerable<ProductCategory>
<div class="main-menu-area hidden-sm hidden-xs sticky-header-1" id="header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="menu-area">
                    <nav>
                        <ul>
                            <li class="active">
                                <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>
                            <li>
                                <a>Sản Phẩm<i class="fa fa-angle-down"></i></a>
                                <div class="mega-menu">
                                    @foreach (var p in Model)
                                    {
                                        <span>
                                            @if (!p.ParentId.HasValue && p.Status == true)
                                            {
                                                <a class="title">@p.Name</a>
                                                @foreach (var o in Model)
                                                {
                                                    @if (o.ParentId.HasValue && o.ParentId == p.CategoryId)
                                                    {
                                                        <a style="width: 200px; white-space: nowrap; overflow: hidden;text-overflow: ellipsis;" title="@o.Name" asp-controller="Products" asp-action="Index" asp-route-currentCategory="@o.UrlFriendly">@o.Name</a>
                                                    }
                                                }
                                            }
                                        </span>
                                    }
                                </div>
                            </li>
                            <li>
                                <a asp-controller="Cart" asp-action="Index">Giỏ hàng</a>
                            </li>
                            <li>
                                <a asp-controller="Contact" asp-action="Index">Liên hệ</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- main-menu-area-end -->
<!-- mobile-menu-area-start -->
<div class="mobile-menu-area hidden-md hidden-lg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="mobile-menu">
                    <nav id="mobile-menu-active">
                        <ul id="nav">
                            <li class="active">
                                <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>
                            <li>
                                <a>Sản Phẩm</a>
                                <ul>
                                    @foreach (var p in Model)
                                    {
                                        @if (!p.ParentId.HasValue && p.Status == true)
                                        {
                                            <li>
                                                <span>
                                                    <a class="title"><b>@p.Name</b></a>
                                                    @foreach (var o in Model)
                                                    {
                                                        @if (o.ParentId.HasValue && o.ParentId == p.CategoryId)
                                                        {
                                                            <a style="width: 200px; white-space: nowrap; overflow: hidden;text-overflow: ellipsis;" title="@o.Name" asp-controller="Products" asp-action="Index" asp-route-currentCategory="@o.UrlFriendly">@o.Name</a>
                                                        }
                                                    }
                                                </span>
                                            </li>
                                        }

                                    }
                                </ul>
                            </li>
                            <li>
                                <a asp-controller="Cart" asp-action="Index">Giỏ hàng</a>
                            </li>
                            <li>
                                <a asp-controller="Contact" asp-action="Index">Liên hệ</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- mobile-menu-area-end -->
