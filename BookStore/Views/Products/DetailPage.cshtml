@section Scripts{
    <script>
        $(function () {
            $(".quickViewModal").on("click", function () {
                var id = $(this).data("id");
                $.ajax({
                    url: "/Products/Detail",
                    type: "GET",
                    data: {
                        id: id
                    },
                    success: function (data) {
                        $(".modalBody").html("");
                        $(".modalBody").html(data);
                    },
                    error: function (data) {
                        alert("error");

                    }
                });
            });
        });

    </script>

